<h5> Welcome <%= @user.email %>!</h5>
<p>your favourites Nightouts</p>

<% if @favourites.present? %>
  <% @favourites.each do |favourite| %>
    <div class="card-trip">
      <% if favourite.venue.photos.attached? %>
        <%= cl_image_tag favourite.venue.photos[0].key %>
      <% end %>




      <div class="card-trip-infos">
        <div>
          <h2><%= favourite.venue.name %></h2>
          <p><%= favourite.venue.address %></p>
        </div>
        <h2 class="card-trip-pricing"><%= favourite.venue.price_segment %>â‚¬/day</h2>
      </div>
    </div>
  <% end %>
<% else %>
  <p> Currently, you have no saved listings! </p>
<% end %>
