<div class="container-fluid">

  <!-- SHOWPAGE BTNS -->
  <div class="row m-0">
    <div class="col-12 p-0">
      <div class="d-flex align-items-center my-2">
        <%= render 'components/showpage_buttons' %>
      </div>
    </div>
  </div>

  <!-- VENUE CARROUSEL -->
  <div class="row">
    <div class="col-12 p-0">
      <%= render 'components/venue-carrousel' %>
    </div>
  </div>

  <!-- VENUE CONTENT -->
  <div class="row mt-3">
    <div class="col-12">
      <%= render 'components/venue-content' %>
    </div>
  </div>

 <a class="js-social-share facebook" href="https://www.facebook.com/sharer/sharer.php?u=<%= yield :url %>" target="_blank">
 <i class="fab fa-facebook-f"></i>
 </a>
 <a class="js-social-share twitter" href="https://twitter.com/intent/tweet?text=<%= yield :title %>&url=<%= yield :url %>&via=twitter" target="_blank"><i class="fab fa-twitter"></i></a>

  <!-- BUTTON ADD-TO-NIGHT -->
  <%= link_to night_venue_night_path(@night,@venue), method: :patch, class:'btn btn-primary ct-btn btn-block ct-sticky-btn', id:'add-btn' do %>
    <p><strong>Add to Night Out</strong></p>
  <% end %>



  <!-- ROW FOR THE REVIEWS COMMENTS -->
  <div class="row mt-5" id="my-reviews">
    <div class="col-12">
    <%= render 'components/review-comment' %>
    </div>
  </div>

  <!-- ROW FOR THE REVIEW FORM -->
  <div class="row mt-5 mb-5">
    <div class="col-12">
      <%= render 'components/review-form' %>
    </div>
  </div>

</div>
