<!-- navbar -->
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex align-items-center my-2">
        <%= link_to "#" , class:"nav-icon", id:"back" do %>
          <i class="fas fa-chevron-left"></i>
        <% end %>
        <div>
          <%= link_to "#", class:"nav-icon" do %>
            <i class="far fa-share-square"></i>
          <% end %>
          <%= link_to "#", class:"nav-icon" do %>
            <i class="far fa-heart"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- fullscreen-width carrousell -->
  <div class="row">
    <div class="col-12">
      <% if @venue.photos.attached? %>
        <div id="showCarousel" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @venue.photos[0].key, crop: :fit, class:"d-block w-100 h-100" %>
            </div>
            <% if @venue.photos.length > 1 %>
              <% @venue.photos.drop(1).each do |photo| %>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, crop: :fit, class:"d-block w-100 h-100" %>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#showCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#showCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <% else %>
        <%= image_tag asset_url('standard') %>
      <% end %>
    </div>
  </div>
</div>
