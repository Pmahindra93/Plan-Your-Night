<div class="container mt-5 pt-5 mb-5">
  <div class="row">
    <div class="col-12">
      <h3 class="text-primary">
        Your plan for the night
      </h3>
      <br>


      <%= link_to night_venues_path(@night), class: "btn btn-primary ct-btn" do%>
        <p>Add a Bar <i class="fas fa-glass-cheers"></i></p>
      <% end %>
      <% @night.venues.where(venue_type: "bar").each do |venue| %>
        <%= link_to night_venue_path(@night,venue) do %>
          <%= render 'components/cards-summary', venue: venue, night: @night %>
        <% end %>
      <% end %>

      <br>

      <%= link_to 'Add a club',clubs_night_venues_path(@night), class: "btn btn-primary ct-btn"%>
      <% @night.venues.where(venue_type: "club").each do |venue| %>
        <%= link_to night_venue_path(@night,venue) do %>
          <%= render 'components/cards-summary', venue: venue, night: @night  %>
        <% end %>
      <% end %>


    <%= link_to 'Continue',night_save_night_path(@night), class: "btn btn-primary btn-block ct-btn ct-shadow ct-round-50", 'data-toggle'=> "modal", 'data-target'=>"#exampleModalCenter" %>
    <!-- MODAL -->
    <%= render 'components/modal_summary_page' %>
    </div>
  </div>
</div>





